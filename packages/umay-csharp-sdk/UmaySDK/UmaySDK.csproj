<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>UmaySDK</PackageId>
    <Version>1.0.1</Version>
    <Authors>Umay</Authors>
    <Company>Umay</Company>
    <Description>C# SDK for the Umay HTML to PDF/Image conversion service</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://umayrender.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tolgaand/umay-render</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>pdf;html;conversion;screenshot;render</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
    <PackageReference Include="System.Text.Json" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
